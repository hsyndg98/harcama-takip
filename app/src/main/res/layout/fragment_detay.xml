<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.detay.DetayFragment">


    <ImageView
        android:id="@+id/urunIconDetay_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:textSize="24sp"
        android:id="@+id/urunAciklamaDetay_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Elbise"
        app:layout_constraintEnd_toEndOf="@+id/urunIconDetay_iv"
        app:layout_constraintStart_toStartOf="@+id/urunIconDetay_iv"
        app:layout_constraintTop_toBottomOf="@+id/urunIconDetay_iv" />

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/urunFiyatDetay_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:text="250"
        app:layout_constraintEnd_toEndOf="@+id/urunAciklamaDetay_txt"
        app:layout_constraintStart_toStartOf="@+id/urunAciklamaDetay_txt"
        app:layout_constraintTop_toBottomOf="@+id/urunAciklamaDetay_txt" />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="15dp"
        style="?attr/materialButtonStyle"
        android:id="@+id/sil_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="@string/sil"
        app:layout_constraintEnd_toEndOf="@+id/urunFiyatDetay_txt"
        app:layout_constraintStart_toStartOf="@+id/urunFiyatDetay_txt"
        app:layout_constraintTop_toBottomOf="@+id/urunFiyatDetay_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>